CXXFLAGS = -Wall -Werror -g
CXX = g++
CURRENT_DIR = $(notdir $(shell pwd))
EXE_NAME = z1963771_project5
TAR_NAME = z1963771_project5.tar


# Make and run
run: default
    ./$(EXE_NAME)

# Clean
clean:
    rm -f *.o $(EXE_NAME) $(EXE_NAME)_p2
    rm -f $(TAR_NAME)

# Create file to hand in
zip: clean
    cd ..; tar -cvvf $(TAR_NAME) $(CURRENT_DIR); cd $(CURRENT_DIR)
    mv ../$(TAR_NAME) .
